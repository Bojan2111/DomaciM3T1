@model DomaciM3T1.Models.Proizvodjac

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Proizvodjac</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Naziv)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Naziv)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Drzava)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Drzava)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Grad)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Grad)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Salon)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Salon.Naziv)
        </dd>
    </dl>
</div>
<div>
    <h3>Modeli automobila:</h3>
    @if (Model.Automobils != null && Model.Automobils.Count > 0)
    {
        <ul>
            @foreach (var automobil in Model.Automobils)
            {
                    <li>@automobil.Model</li>
            }
        </ul>
    }
    else
    {
        <p>No automobili found.</p>
    }
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
